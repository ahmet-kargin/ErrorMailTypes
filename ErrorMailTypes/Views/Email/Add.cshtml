@model ErrorMailTypes.Models.MailDto

@{
    ViewData["Title"] = "Mail Add";
}
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>


@using (Html.BeginForm("Add", "Email", FormMethod.Post))
{
    <div class="col-md-5  mt-3 mb-3">
        @Html.DropDownListFor(m => m.MailTypeId, Model.MailTypeSelectList, "--Select Item--", new { @class = "form-control form-control-sm", @aspfor="MailType" })
        @Html.ValidationMessageFor(m => m.MailTypeId, null, new { @class = "help-block text-danger" })
    </div>
    <input id="summernote" class="col-md-5" type="submit"/>
    

    <div class="col-md-4 mt-4" id="selectBody" onchange="myFunction()">
        @Html.TextBoxFor(m => m.MailBody
    , new { @class = "form-control form-control-sm" })
    </div>

    <div class="col-md-12 mt-4">
        <button class="btn btn-sm btn-success" type="submit" id="btnSave" onclick="btnSave()">
            <i class="fa fa-dot-circle-o"></i> Save
        </button>&nbsp;
        <button class="btn btn-sm btn-primary" type="submit" id="btnGet" onclick="btnGet()">
           <i class="fa fa-dot-circle-o"></i> Get
        </button>
    </div>
}


<script>
    $('#summernote').summernote({
        placeholder: 'Hello stand alone ui',
        tabsize: 2,
        height: 120,
        toolbar: [
            ['style', ['style']],
            ['font', ['bold', 'underline', 'clear']],
            ['color', ['color']],
            ['para', ['ul', 'ol', 'paragraph']],
            ['table', ['table']],
            ['insert', ['link', 'picture', 'video']],
            ['view', ['fullscreen', 'codeview', 'help']]
        ]
    });

</script>

<script>
    function myFunction() {
        var x = document.getElementById("selectBody").value;
        document.getElementById("selectBody").innerHTML = "You selected: " + x;
    }
</script>


